#!/usr/bin/env bash
# Generate the RSA key pair with encryption
ssh-keygen -t rsa -b 4096 -f school -N "betty" -q

# Verify encryption
if grep -q "ENCRYPTED" "school"; then
    echo "RSA key pair 'school' created successfully and is encrypted."
else
    echo "Error: Private key is not encrypted!" >&2
    exit 1
fi
